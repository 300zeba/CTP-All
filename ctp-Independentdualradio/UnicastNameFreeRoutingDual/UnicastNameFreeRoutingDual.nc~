interface UnicastNameFreeRoutingDual {

  /**
   * Get the address of the best next hop set to the destination.
   * If there is not best next hop, the address is the local address.
   * @return : The next best hop, or the local address if there is no route.
   */
  command am_addr_t nextHop1();
command am_addr_t nextHop2();
  command bool hasRoute1();
command bool hasRoute2();
  
  event void routeFound1();
event void routeFound2();
  event void noRoute1();
	event void noRoute2();
}

